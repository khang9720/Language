@model IEnumerable<Language.Models.LanguageModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link href="/Assets/Client/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/Assets/Client/css/sb-admin-2.min.css" rel="stylesheet">
<style>
    .btn-save, .btn-cancel {
        display: none;
    }  
</style>
</head>

<body>
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="row justify-content-center">
                <div class="col-xl-12 col-lg-12 col-md-9">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <label for="cars">Ngôn ngữ</label>

                            @using (Html.BeginForm("Index", "Language"))
                            {

                                @Html.DropDownList("ddlCulture", new SelectList(new[] {
                                    new {value="en",text="en"},
                                    new {value="km",text="km"},
                                    }, "value", "text"), new { onchange = "this.form.submit();" })
                            }

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>

                                        <tr>
                                            <th>#</th>
                                            <th>STT</th>
                                            <th>Key</th>
                                            <th>Value EN</th>
                                            <th>Value KM</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbData"></tbody>
                                </table>
                                <div id="UpdateDiv"></div>

                                <div id="pagination" class="pagination">
                                </div>
                                <script id="data-template" type="x-tmpl-mustache">
                                    <tr>
                                        <td>
                                            @*<button  class="btn btn-primary btn-edit" data-id="{{key}}" data-toggle="modal" data-target="#modalAddUpdate">
                                                Edit
                                            </button>*@
                                            <button class="btn btn-primary btn-edit " data-id="{{key}}">Edit</button>
                                            <button class="btn btn-danger btn-delete" data-id="{{key}}" >Delete</button>
                                            <button class="btn btn-success btn-save" type="submit" value="Edit" data-id="{{key}}" >Save</button>
                                            <button class="btn btn-secondary btn-cancel" href="~/Language/Index.cshtml" >Cancel</button>
                                        </td>
                                        <td> {{index}} </td>
                                        <td> {{key}} </td>
                                        <td class="{{key}}" id="{{key}}"> {{value}} </td>
                                        <td> {{value2}} </td>

                                    </tr>
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@RenderPage(@"~/Views/Home/_AddUpdateModal.cshtml")

    <!-- Bootstrap core JavaScript-->
    <script src="/Assets/Client/vendor/jquery/jquery.min.js"></script>
    <script src="/Assets/Client/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/Assets/Client/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/Assets/Client/js/sb-admin-2.min.js"></script>



    <script src="~/Scripts/plugins/mustache.min.js"></script>
    <script src="~/Scripts/plugins/jquery.twbsPagination.min.js"></script>
    <script src="~/Scripts/plugins/bootbox.min.js"></script>
    <script src="~/Scripts/controllers/languageController.js"></script>
    <!-- Modal -->
    <!-- Modal -->
    <!-- Modal -->
    <!-- Large modal -->
    <!-- Modal -->


</body>
</html>
